# Anthropic API Key (required)
VIDTAG_CLAUDE_API_KEY=your-claude-api-key-here

# YouTube API Key (optional - uses stub if not provided)
YOUTUBE_API_KEY=your-youtube-api-key-here

# Raindrop.io API Token (optional - uses stub if not provided)
RAINDROP_API_TOKEN=your-raindrop-token-here

# comma-separated list of YouTube playlist IDs to process (e.g., PLxxx... from https://www.youtube.com/playlist?list=PLxxx...)
export VIDTAG_YT_PLAYLIST_IDS=playlist-ids-here

# Tag Filtering (optional)
# Comma-separated list of tags to block from AI suggestions
# Example: VIDTAG_TAGGING_BLOCKED_TAGS=spam,promotional,clickbait,nsfw
VIDTAG_TAGGING_BLOCKED_TAGS=

# Debug Mode (optional)
DEBUG_MODE=false

# Scheduled Playlist Processing (optional)
# Enable scheduled processing of a YouTube playlist
# VIDTAG_SCHEDULER_ENABLED=true
# VIDTAG_SCHEDULER_FIXED_DELAY_HOURS=1
# VIDTAG_SCHEDULER_PLAYLIST_ID=PLxxx...  # Get from YouTube URL: https://www.youtube.com/playlist?list=PLxxx...
